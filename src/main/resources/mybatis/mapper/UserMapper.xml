<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myth.springboot.dao.UserMapper">
<!--    增加用户-->
    <insert id="userInsert"  parameterType="com.myth.springboot.entity.User">
        insert into user values (null,#{name},#{password},#{type_id})
    </insert>
    <!--    查找用户-->
    <select id="userSelect" resultType="com.myth.springboot.entity.User"
            parameterType="com.myth.springboot.entity.User">
        select * from user
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>
    <select id="userSelectWithPage" resultType="com.myth.springboot.entity.User"
            parameterType="com.myth.springboot.entity.User">
        select * from user
    </select>
    <!--    通过id修改用户-->
    <update id="userUpdate" parameterType="com.myth.springboot.entity.User">
        update user set name=#{name},password=#{password},type_id=#{type_id}
        where id =#{id}
    </update>
    <!--    删除id-->
    <delete id="userDelete" parameterType="com.myth.springboot.entity.User">
        delete from user where id=#{id}
    </delete>

</mapper>